<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transactions_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/line1"
        >


        <LinearLayout android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/accname_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cerapro_medium"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:padding="2dp"
                android:textSize="18sp"
                android:text="Sacco Account No." />
            <TextView
                android:id="@+id/available_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cerapro_medium"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:padding="2dp"
                android:textSize="16sp"
                android:text="Available Balance" />

            <LinearLayout
                android:id="@+id/balanceInside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/balance"
                android:orientation="horizontal"
                android:background="@color/colorBackground"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/AccountBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/cerapro_medium"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="50sp"
                    android:text="@string/acc_bal" />

                <TextView
                    android:id="@+id/Ugx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/cerapro_medium"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:padding="20dp"
                    android:textSize="30sp"
                    android:text="/ugx" />

            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/balance"
            android:layout_marginTop="7dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/all_transactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Transaction" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deposits" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/withdraws"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Withdrawals" />
        </com.google.android.material.tabs.TabLayout>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/line1"
        android:id="@+id/viewpager"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_add_money" />

</RelativeLayout>