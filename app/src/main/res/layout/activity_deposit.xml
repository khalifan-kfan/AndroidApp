<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepositActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/line1"
        >

        <LinearLayout android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/select_Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cerapro_medium"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:padding="2dp"
                android:textSize="24sp"
                android:text="User Name" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/balanceInside"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp"
                android:layout_alignParentLeft="true"
                tools:ignore="NotSibling" />

            <LinearLayout
                android:id="@+id/balanceInside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/balance"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@color/colorBackground"
                android:gravity=""
                >
                <TextView
                    android:id="@+id/account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/cerapro_medium"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:textSize="16sp"
                    android:text="Choose Account" />

                <Spinner
                    android:background="@color/colorWhite"
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/cerapro_medium"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:textSize="16sp"
                    android:text="Enter Amount" />
                <LinearLayout
                    android:id="@+id/layout_Amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/balance"
                    android:orientation="horizontal"
                    android:background="@color/colorBackground"
                    android:gravity="">
                    <EditText
                        android:inputType="number"
                        android:id="@+id/etDeposit"
                        android:layout_margin="10dp"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@color/colorWhite"/>
                    <TextView
                        android:id="@+id/Ugx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/cerapro_medium"
                        android:textAllCaps="true"
                        android:textColor="@color/black"

                        android:textSize="28sp"
                        android:text="/ugx" />

                </LinearLayout>



                <TextView
                    android:id="@+id/Depositnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/cerapro_medium"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:textSize="16sp"
                    android:text="Enter Number" />

                <EditText
                    android:maxLength="10"
                    android:inputType="number"
                    android:id="@+id/etDepositNumber"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorWhite"/>
                <Button
                    android:id="@+id/button_Deposit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_margin="10dp"
                    android:text="Deposit"
                    android:onClick="Make_Deposit"/>


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>